module.exports = class Escrow {

    constructor(payer, amount, seller, arbiter, fee) {

        let main = this;
        this._escrow = 0;
        this.payer = payer;
        this.seller = seller;
        this.arbiter = arbiter;
        this.fee = fee;
        this.transfer(this.payer, 'escrow', amount);
    }



    pay_out(caller)  {
        if(caller != this.arbiter) return 'not permitted';
        this.transfer('escrow', this.arbiter, this.fee);
        this.transfer('escrow', this.seller, this._escrow);
    }


    pay_back(caller)  {
        if(caller != this.arbiter) return 'not permitted';
        this.transfer('escrow', this.arbiter, this.fee);
        this.transfer('escrow', this.payer, this._escrow);
    }


    transfer(from, to, amount) {
        console.log(`âž  system message: transfer ${amount} from ${from} to ${to}.`);
        if(from == 'escrow') main._escrow -= amount;
        if(to == 'escrow') main._escrow += amount;
    }
}