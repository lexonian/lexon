module.exports = class Escrow {

    constructor(buyer, amount, seller, arbiter, fee) {

        let main = this;
        this._escrow = 0;
        this.buyer = buyer;
        this.seller = seller;
        this.arbiter = arbiter;
        this.amount = amount;
        this.fee = fee;
        this._pay(this.buyer, 'escrow', this.amount);
    }



    pay_out(caller)  {
        if(caller != this.arbiter) return 'not permitted';
        this._pay('escrow', this.arbiter, this.fee);
        this._pay('escrow', this.seller, this._escrow);
    }


    pay_back(caller)  {
        if(caller != this.arbiter) return 'not permitted';
        this._pay('escrow', this.arbiter, this.fee);
        this._pay('escrow', this.buyer, this._escrow);
    }


    _pay(from, to, amount) {
        console.log(`âž  system message: pay ${amount} from ${from} to ${to}.`);
        if(from == 'escrow') main._escrow -= amount;
        if(to == 'escrow') main._escrow += amount;
    }
}